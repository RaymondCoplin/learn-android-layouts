<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:layout_column="1" android:width="100dp" android:text="1" android:background="#ff0000" />
        <TextView android:layout_column="2" android:width="100dp" android:text="2" android:background="#00ff00"/>
        <TextView android:layout_column="3" android:width="100dp" android:text="3" android:background="#0000ff" />
    </TableRow>

    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:layout_column="1" android:layout_span="2" android:layout_width="wrap_content" android:text="1" android:background="#ff5500" />
        <TextView android:layout_column="2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2" android:background="#22aa33" />
    </TableRow>

</TableLayout>
